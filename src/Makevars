PKG_LIBS=-Lgin/ -lCEasyGWAS -Lgin/External/maxflow -lmaxflow
PKG_CPPFLAGS=-Igin/src -Igin/External -Igin/External -Igin/External/maxflow -Igin/External/Cephes

all: libCEasyGWAS libmaxflow $(SHLIB)

cmake:
	@(cp -f CMakeLists.txt gin && cd gin && cmake .)

libCEasyGWAS: cmake
	@(cd gin && $(MAKE) CEasyGWAS)
	
libmaxflow: cmake
	@(cd gin && $(MAKE) maxflow)
	
clean:
	@(cd gin && make clean)