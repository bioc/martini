PKG_LIBS=-Lgin -lgin
PKG_CPPFLAGS=-Igin/src -Igin/External -Igin/External -Igin/External/maxflow -Igin/External/Cephes
UNAME := $(shell uname)

ifeq ($(UNAME), Linux)
	url=https://github.com/hclimente/gin/releases/download/v0.1-alpha/libgin-linux-x64.a
endif
ifeq ($(UNAME), Darwin)
	url=https://github.com/hclimente/gin/releases/download/v0.1-alpha/libgin-macosx-x64.a
endif

all: libgin $(SHLIB)

libgin:
		@(wget -N $(url) -O gin/libgin.a)
	
clean:
	@(rm gin/libgin.a)