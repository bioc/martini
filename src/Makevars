PKG_LIBS=-Lgin -lgin-linux-x64
PKG_CPPFLAGS=-Igin/src -Igin/External -Igin/External -Igin/External/maxflow -Igin/External/Cephes

all: libgin $(SHLIB)

libgin:
	@(wget  -nc https://github.com/hclimente/gin/releases/download/v0.1-alpha/libgin-linux-x64.a gin)
	
clean:
	@(cd gin && rm libgin-linux-x64.a)